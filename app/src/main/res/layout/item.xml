<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/item_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="1dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_weight="1"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/name_margin"
                android:text="name"
                android:textSize="@dimen/name_fontSize" />
            <View
                android:background="@android:color/darker_gray"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tel"
                android:textColor="@color/numbers_color"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="@dimen/num_fontSize" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:textColor="@color/address_color"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="@dimen/address_fontSize" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>